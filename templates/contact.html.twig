{% extends "base.html.twig" %}

{% block body %}
<section class="front-section">
       
    
        <p class="title-page bold">CONTACT</p>
    </section>

    <section class="contact-section">
    <form action="">
        <input required type="text" placeholder="Votre nom">
        <input required type="text" placeholder="Votre email">
        <textarea required placeholder="Votre message" name="" id="" cols="30" rows="10"></textarea>
        <button type="submit">Envoyer</button>
    </form>
    </section>

    <div id="mapid"></div>

    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"
